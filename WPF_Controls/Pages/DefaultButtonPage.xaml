<Page x:Class="WpfControls.Pages.DefaultButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="500"
      d:DesignWidth="300"
      mc:Ignorable="d"
      Title="DefaultButtonPage"
      FontSize="18">
  <Page.Resources>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="10" />
      <Setter Property="Padding" Value="6" />
    </Style>
  </Page.Resources>
  <Grid>
    <Border Margin="40,20,40,20"
            BorderBrush="DarkGray"
            BorderThickness="2">
      <StackPanel MaxWidth="240" Margin='0,20'>
        <TextBox Name="textBox1" />
        <TextBlock x:Name="MessageTextBlock" />
        <Button Click="Button_Click"
                Content="Black" />
        <Button Click="Button_Click"
                Content="Blue" Foreground='SteelBlue'/>
        <Button Click="Button_Click"
                Content="Red (Cancel)"
                Foreground="DarkRed"
                IsCancel="True" />
        <Button Click="Button_Click"
                Content="Orange (Default)"
                Foreground="Orange"
                IsDefault="True" />
      </StackPanel>
    </Border>
  </Grid>
</Page>
