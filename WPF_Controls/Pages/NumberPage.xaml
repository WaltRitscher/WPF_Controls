<Page x:Class="WpfControls.Pages.NumberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d"
      Title="NumberPage"
      FontSize="18">

  <TabControl>
    <TabItem Header="TextBox">
      <StackPanel>
        <TextBlock Margin="6"
                   Text="Enter a number between 15 and 25" />
        <TextBox x:Name="NumberTextBox"
                 Margin="6" />

        <Button Margin="6"
                Click="Button_Click"
                Content="Show results" />
        <TextBlock x:Name="MessageTextBlock"
                   Margin="6" />
      </StackPanel>
    </TabItem>
    <TabItem Header="Slider">
      <StackPanel>
        <TextBlock Margin="6"
                   Text="Enter a number between 15 and 25" />

        <Slider x:Name="TripleNumberSlider"
                IsSnapToTickEnabled="True"
                Maximum="25"
                Minimum="15"
                TickFrequency="1" TickPlacement="TopLeft"  Margin="10,12" ValueChanged="TripleNumberSlider_ValueChanged"/>
        <TextBlock x:Name="MessageTextBlock2"
                   Margin="6" />
      </StackPanel>
    </TabItem>
  </TabControl>
</Page>
