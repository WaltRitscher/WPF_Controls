<Page x:Class="WpfControls.Pages.PathPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="600"
      d:DesignWidth="600"
      mc:Ignorable="d"
      Title="PathPage">
  <Page.Resources>
    <Style TargetType="CheckBox">

      <Setter Property="Margin" Value="10" />
      <Setter Property="VerticalAlignment" Value="Center" />

    </Style>
  </Page.Resources>
  <TabControl Margin="20">
    <TabItem Header="Path 1">
      <Path StrokeThickness="6" Margin='40,0'>
        <Path.Stroke>
          <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0" Color="#FF189DE3" />
            <GradientStop Offset="1" Color="#FFC5D599" />
          </LinearGradientBrush>
        </Path.Stroke>

        <Path.Data>
          <PathGeometry>
            <PathGeometry.Figures>
              <PathFigureCollection>
                <PathFigure StartPoint="10,100">
                  <PathFigure.Segments>
                    <PathSegmentCollection>
                      <BezierSegment Point1="100,0"
                                     Point2="200,200"
                                     Point3="260,100" />
                      <BezierSegment Point1="100,110"
                                     Point2="200,200"
                                     Point3="100,100" />
                      <ArcSegment Point="-1,220"
                                  
                                  Size="5,5"
                                  SweepDirection="Clockwise" />
                      <!--<LineSegment />
                      <QuadraticBezierSegment />
                      <PolyLineSegment />-->

                    </PathSegmentCollection>
                  </PathFigure.Segments>
                </PathFigure>
              </PathFigureCollection>
            </PathGeometry.Figures>
          </PathGeometry>
        </Path.Data>
      </Path>
    </TabItem>
    <TabItem Header="Path 2">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="auto" />
          <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel>

          <StackPanel x:Name="MainStackPanel"
                      Orientation="Horizontal">
            <CheckBox x:Name="CircleBackPathButton"
                      Checked="CircleBackPath_Checked"
                      Content="Circle Back Path "
                      Unchecked="CircleBackPath_Unchecked" />
            <CheckBox x:Name="GradientPathButton"
                      Checked="GradientPathButton_Checked"
                      Content="Gradient Path"
                      Unchecked="GradientPathButton_Unchecked" />

            <CheckBox x:Name="Path4Button"
                      Checked="Path4Button_Checked"
                      Content="Check Path"
                      Unchecked="Path4Button_Unchecked" />
            <CheckBox x:Name="Path5Button"
                      Checked="Path5Button_Checked"
                      Content="Check Outline Path"
                      Unchecked="Path5Button_Unchecked" />
          </StackPanel>
          <TextBlock x:Name="PathDataTextBlock"
                     MinHeight="140"
                     TextWrapping="Wrap" />
        </StackPanel>
        <Viewbox Grid.Row="1"
                 Margin="0,0,0.4,0">
          <Canvas Canvas.Left="0"
                  Canvas.Top="0"
