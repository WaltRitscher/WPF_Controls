<Page x:Class="WpfControls.Pages.IndeterminatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d"
      Title="InderminatePage" FontSize='18'>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
    </Grid.ColumnDefinitions>
    <ListBox ItemsSource="{Binding}"
             SelectionChanged="ListBox_SelectionChanged"
             SelectionMode="Multiple">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding ColorName}" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <StackPanel Grid.Column="1"
                Margin="6">
      <CheckBox x:Name="BlueCheckbox"
                Content="Only Blues"
                IsThreeState="True" />
      <CheckBox x:Name="OrangeCheckbox"
                Content="Only Oranges"
                IsThreeState="True" />
    </StackPanel>
  </Grid>
</Page>
