<Page x:Class="WpfControls.Pages.BulletDecoratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfControls.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BulletDecoratorPage">

    <StackPanel>
    <BulletDecorator Margin="0,5,0,0">
      <BulletDecorator.Bullet>
        <Ellipse Height="10"
                 Width="10"
                 Fill="Blue" />
      </BulletDecorator.Bullet>
      <TextBlock Text='Example Text' Margin='10,0'/>
    </BulletDecorator>
    <BulletDecorator Margin="0,5,0,0">
      <BulletDecorator.Bullet>
        <TextBlock FontFamily='Segoe UI Symbol'
                   Text='⏩'/>
      </BulletDecorator.Bullet>
      <TextBlock Text='Example Text'
                 Margin='10,0' />
    </BulletDecorator>
  </StackPanel
      >
</Page>
