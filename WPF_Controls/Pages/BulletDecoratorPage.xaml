<Page x:Class="WpfControls.Pages.BulletDecoratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="BulletDecoratorPage"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d"
      FontSize='18'>

  <StackPanel Margin="30">
   
    <BulletDecorator Margin="0,5,0,0" >
      <BulletDecorator.Bullet>
        <Image Source='/WpfControls;component/Images/Leaf2.jpg'
               Width='56'
               Stretch='Fill' />
      </BulletDecorator.Bullet>
      <TextBlock Margin="10,0"
                 Text="Maple"  VerticalAlignment='Center'/>
    </BulletDecorator>

    <BulletDecorator Margin="0,5,0,0">
      <BulletDecorator.Bullet>
      <Image Source='/WpfControls;component/Images/Leaf1.jpg' Width='56' Stretch='Fill' />
      </BulletDecorator.Bullet>
      <TextBlock Margin="10,0" VerticalAlignment='Center'
                 Text="Elm" />
    </BulletDecorator>
  </StackPanel>
</Page>
