      <Button Content="Example W"
              FontStyle="Oblique" />
      <Button Content="Example X" FontStretch="Expanded" />
      <Button Content="Example Y"
              FontFamily="Rockwell Condensed" />
      <Button Content="Example Z"  FontFamily="Segoe UI, Arial" />

    </StackPanel>
  </StackPanel>
</Page>
