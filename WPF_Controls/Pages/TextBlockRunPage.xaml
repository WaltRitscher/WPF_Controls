<Page x:Class="WpfControls.Pages.TextBlockRunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d"
      Title="TextBlockRunPage">

  <Grid>
    <Border Margin="40,20,40,20"
            BorderBrush="DarkGray"
            BorderThickness="2">
      <StackPanel Margin="20">
        <TextBlock>

          <Run FontSize="50"
               FontWeight="Bold"
               Foreground="Orange"
               Text="T" />
          <Run FontSize="18"
               Text="extBlock with Run" />

        </TextBlock>
        <TextBlock>
          <Run FontSize="20"
               FontWeight="Light">
            ABC
          </Run>
          <LineBreak />
          <Bold FontSize="20"
                FontWeight="Bold">
            ABC
          </Bold>
          <LineBreak />
        </TextBlock>
      </StackPanel>
    </Border>
  </Grid>
</Page>
