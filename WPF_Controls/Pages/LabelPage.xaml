<Page x:Class="WpfControls.Pages.LabelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="500"
      d:DesignWidth="500"
      mc:Ignorable="d"
      Title="LabelPage">

  <Page.Resources>
    <Style TargetType="Control">
      <Setter Property="Margin" Value="10" />
    </Style>
  </Page.Resources>
  <Border Margin="40,20,40,20"
          BorderBrush="DarkGray"
          BorderThickness="2">
    <StackPanel Margin="20">
      <TextBlock Text="Watch, learn, and be inspired..."/>
      <Label Content="Watch, learn, and be inspired...">
      </Label>
      <Label>
        <StackPanel Orientation="Horizontal">
          <Rectangle Width="10"
                     Height="10"
                     Margin="2"
                     Fill="SteelBlue" />
          <Rectangle Width="16"
                     Height="16"
                     Margin="2"
                     Fill="SteelBlue" />
          <TextBlock Text="Nested XAML in Label" VerticalAlignment='Center'/>
          <Rectangle Width="16"
                     Height="16"
                     Margin="2"
                     Fill="SteelBlue" />
          <Rectangle Width="10"
                     Height="10"
                     Margin="2"
                     Fill="SteelBlue" />

        </StackPanel>
      </Label>

      <Grid>
        <StackPanel Orientation="Horizontal">
          <Rectangle Width="10"
                     Height="10"
                     Margin="2"
                     Fill="SteelBlue" />
          <Rectangle Width="16"
                     Height="16"
                     Margin="2"
                     Fill="SteelBlue" />
          <TextBlock Text="Nested XAML in Grid"
                     VerticalAlignment='Center' />
          <Rectangle Width="16"
                     Height="16"
                     Margin="2"
                     Fill="SteelBlue" />
          <Rectangle Width="10"
                     Height="10"
                     Margin="2"
                     Fill="SteelBlue" />

        </StackPanel>
      </Grid>
    </StackPanel>
  </Border>
</Page>
