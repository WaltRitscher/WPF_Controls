<Page x:Class="WpfControls.Pages.UseAdornerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:adorners="clr-namespace:WpfControls.Adorners"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="UseAdornerPage"
      d:DesignHeight="600"
      d:DesignWidth="600"
      mc:Ignorable="d">
  <Grid Name="MainGrid" MouseLeftButtonUp='MainGrid_MouseLeftButtonUp'>
    <Grid.Background>
      <ImageBrush ImageSource='/WpfControls;component/Images/Splash.png'  />
    </Grid.Background>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>
  
    <Rectangle x:Name="Rect1"
               Width="300"
               Height="120"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" 
               MouseLeftButtonUp='Rect1_MouseLeftButtonUp'>
      <Rectangle.Fill>
        <ImageBrush ImageSource="/WpfControls;component/Images/River.jpg" />
      </Rectangle.Fill>
    </Rectangle>
  </Grid>
</Page>