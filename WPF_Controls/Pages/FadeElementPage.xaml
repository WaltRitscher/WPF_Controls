<Page x:Class="WpfControls.Pages.FadeElementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="FadeElementPage"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">

  <Grid>
    <Grid.Background>
      <ImageBrush ImageSource="/WpfControls;component/Images/TreeBackground.jpg"
                  Stretch="UniformToFill" />
    </Grid.Background>
    <Image x:Name="Image1"
           MouseLeftButtonUp="Image_MouseLeftButtonUp"
           Source="/WpfControls;component/Images/RedButtonFull.jpg" />
  </Grid>
</Page>