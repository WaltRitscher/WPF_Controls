<Page x:Class="WpfControls.Pages.FadeElementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="FadeElementPage">

  <Grid>
    <Grid.Background>
      <ImageBrush ImageSource="/WpfControls;component/Images/TreeBackground.jpg"
                  Stretch="UniformToFill" />

    </Grid.Background>
    <Image x:Name='Image1'
           Source='/WpfControls;component/Images/RedButtonFull.jpg'
           MouseLeftButtonUp='Image_MouseLeftButtonUp' />
  </Grid>
</Page>
