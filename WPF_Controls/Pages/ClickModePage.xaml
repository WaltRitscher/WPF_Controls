<Page x:Class="WpfControls.Pages.ClickModePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d"
      Title="ClickModePage">
  <Page.Resources>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="6" />
      <Setter Property="Padding" Value="6" />
    </Style>
  </Page.Resources>
  <StackPanel>
    <Button Click="Button_Click"
            Content="ClickMode on Release (default)" />
    <Button Click="Button_Click"
            Content="ClickMode on Pressed" />
    <Button Click="Button_Click"
            Content="ClickMode on Hover" />

    <Border Width="80"
            BorderBrush="LightGray"
            BorderThickness="3">
      <Border.RenderTransform>
        <TranslateTransform x:Name="BorderTranslateTransform" />
      </Border.RenderTransform>
      <Image x:Name="LogoImage"
             Source="/WpfControls;component/Images/TravelLogo.jpg" />
    </Border>
  </StackPanel>
</Page>
