<Page x:Class="WpfControls.Pages.TouchEventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="TouchEventsPage"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">

  <Grid x:Name="MainGrid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="5" />
      <ColumnDefinition Width="1*" />
    </Grid.ColumnDefinitions>
    <Rectangle x:Name="MainRectangle"
               Fill="LightSteelBlue"
               TouchDown="MainRectangle_TouchDown"
               TouchMove="MainRectangle_TouchMove"
               TouchUp="MainRectangle_TouchUp" />
    <Rectangle Grid.Column="2"
               Fill="LightCoral" />
  </Grid>
</Page>