<Page x:Class="WpfControls.Pages.CheckboxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="CheckboxPage">

  <StackPanel>

    <StackPanel Margin="20">
     
      <CheckBox Margin="4"
                Content='CheckBox is a styled version of ToggleButtton'></CheckBox>
      <CheckBox IsChecked='{x:Null}'
                Margin="4"
                Content="Is Indeterminate (not three state)"
                IsThreeState="False" />

      <CheckBox IsThreeState='True'
                IsChecked='{x:Null}'
                Margin="4"
                Content='IsThreeState'></CheckBox>

    </StackPanel>

  </StackPanel>
</Page>
