<Page
  x:Class="WpfControls.Pages.StartHere"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WpfControls.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="StartHere"
  d:DesignHeight="600"
  d:DesignWidth="800"
  mc:Ignorable="d">

  <Page.Background>
    <LinearGradientBrush StartPoint="0.511,0.091" EndPoint="0.511,0.991">
      <GradientStop Offset="0" Color="#FF222222" />
      <GradientStop Offset="1" Color="#FFFFFFFF" />
    </LinearGradientBrush>
  </Page.Background>
  <Grid>

    <Image
      x:Name="image"
      HorizontalAlignment="Stretch"
      RenderTransformOrigin="0.5,0.5"
      Source="/images/splash.png"
      Stretch="UniformToFill" />

    <TextBlock
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      FontFamily="Calibri"
      FontSize="110"
      Foreground="Purple"
      Text="{Binding ElementName=titleText, Path=Text}">
      <TextBlock.Effect>
        <BlurEffect Radius="20" />
      </TextBlock.Effect>
    </TextBlock>
    <TextBlock
      x:Name="titleText"
      Margin="2,60"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      FontFamily="Calibri"
      FontSize="107"
      Foreground="PowderBlue"
      Text="Chapter Name" />
  </Grid>
</Page>
