<Page x:Class="WpfControls.Pages.ProgressBarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d"
      Title="ProgressBarPage">

  <StackPanel>
    <StackPanel Background="SteelBlue">
      <TextBlock Text="ProgressBar showing indeterminate progress." />
      <ProgressBar x:Name="Progress1"
                   Height="20"
                   Margin="20,10,20,0" />
      <CheckBox Margin="20"
                Checked="CheckBox_Checked"
                Content="Start Long process..."
                Unchecked="CheckBox_Unchecked" />
    </StackPanel>

    <StackPanel Background="LightCoral">
      <TextBlock Margin="20"
                 Text="ProgressBar showing known progress." />
      <ProgressBar x:Name="Progress2"
                   Height="20"
                   Margin="20"
                   Foreground="#FF934D4D" />
      <Button Margin="20"
              Padding="3"
              Click="Button_Click"
              Content="Download files" />
    </StackPanel>
  </StackPanel>
</Page>
