<Page x:Class="WpfControls.Pages.MarginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="MarginPage">

  <Grid>

    <Ellipse Fill="LightCoral"
             Stroke="LightGray"
             StrokeThickness="5"
             Width="90"
             Height="90"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Margin="0" />
    <Ellipse Fill="SteelBlue"
             Stroke="LightGray"
             StrokeThickness="5"
             Width="90"
             Height="90"
             HorizontalAlignment="Center"
             VerticalAlignment="Top" Margin="0"
           />
    <Ellipse Fill="MediumPurple"
             Stroke="LightGray"
             StrokeThickness="5"
             Width="90"
             Height="90"
             HorizontalAlignment="Right"
             VerticalAlignment="Top" 
             />
  </Grid>
</Page>
