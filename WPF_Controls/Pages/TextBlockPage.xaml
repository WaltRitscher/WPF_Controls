<Page x:Class="WpfControls.Pages.TextBlockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfControls.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="TextBlockPage">
  <Page.Resources>
    <Style TargetType='TextBlock'>
      <Setter Property='Margin'
              Value='6' />
      <Setter Property='Text'
              Value='Watch, learn, and be inspired by professional watercolorist, Sally Fischer,in this video from her master class at the Orange Valley Contemporary Arts Museum. ' />
    </Style>
  </Page.Resources>
  <StackPanel>
    <TextBlock />


  </StackPanel>
</Page>
